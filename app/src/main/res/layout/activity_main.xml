<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="86dp">

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/point"
            android:textColor="#CC0A0A"
            android:textSize="20pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="131dp"
            android:layout_height="96dp"
            android:layout_marginStart="180dp"
            android:layout_toEndOf="@+id/point"
            app:srcCompat="@drawable/logo" />

        <CheckBox
            android:id="@+id/checkboxthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point"
            android:layout_alignStart="@+id/point"
            android:layout_marginStart="18dp"
            android:layout_marginTop="179dp" />

        <CheckBox
            android:id="@+id/checkboxtwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point"
            android:layout_alignStart="@+id/point"
            android:layout_marginStart="18dp"
            android:layout_marginTop="116dp" />

        <CheckBox
            android:id="@+id/checkboxone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point"
            android:layout_alignStart="@+id/point"
            android:layout_marginStart="18dp"
            android:layout_marginTop="56dp" />

        <SeekBar
            android:id="@+id/seeknarone"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_below="@+id/point"
            android:layout_marginStart="19dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/checkboxone"
            android:thumb="@drawable/animal1" />

        <SeekBar
            android:id="@+id/seeknartwo"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_below="@+id/point"
            android:layout_marginStart="19dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/checkboxone"
            android:thumb="@drawable/animal2" />

        <SeekBar
            android:id="@+id/seeknarthree"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_below="@+id/point"
            android:layout_marginStart="19dp"
            android:layout_marginTop="170dp"
            android:layout_toEndOf="@+id/checkboxone"
            android:thumb="@drawable/animal3" />

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="139dp"
            android:layout_height="116dp"
            android:layout_below="@+id/logo"
            android:layout_marginStart="202dp"
            android:layout_marginTop="42dp"
            android:layout_toEndOf="@+id/checkboxtwo"
            android:backgroundTint="#03A9F4"
            android:src="@android:drawable/ic_media_play" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>